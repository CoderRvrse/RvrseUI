name: luau-ci

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  check:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Setup Aftman
        uses: ok-nick/setup-aftman@v0.4.2
        with:
          version: v0.3.0

      - name: Install Lua runtime
        run: |
          sudo apt-get update
          sudo apt-get install -y lua5.1

      - name: Verify toolchain installations
        run: |
          echo "âœ… Installed tools via Aftman:"
          stylua --version
          selene --version
          rojo --version
          wally --version

      - name: Stylua Format
        run: |
          echo "Formatting Lua code with Stylua..."
          stylua .

      - name: Selene
        run: |
          echo "Linting source files with Selene..."
          selene src/ init.lua tools/

      - name: Rojo build
        run: rojo build default.project.json --output build/RvrseUI.rbxlx

      - name: Wally install
        run: wally install

      - name: TestEZ
        run: lua tools/testez.lua
